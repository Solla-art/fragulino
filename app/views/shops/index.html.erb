<p id="notice"><%= notice %></p>

<h1>Список магазинів</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= link_to 'Показати', shop %></td>
        <td><%= link_to 'Редагувати', edit_shop_path(shop) %></td>
        <td><%= link_to 'Видалити', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий магазин', new_shop_path %>
