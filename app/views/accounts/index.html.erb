<h1>Список облікових записів</h1>

<table class="table">
  <thead>
    <tr>
      <th>Облікові записи</th>
      <th>Електронна пошта</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.employee.full_name %></td>
        <td><%= account.email %></td>
        <td><%= link_to 'Змінити дані входу', edit_account_path(account) %></td>
        <td><%= link_to 'Видалити', account, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

