<p id="notice"><%= notice %></p>

<h1>Список відділів</h1>

<table class="table">
  <thead>
    <tr>
      <th>Роль</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.role %></td>
        <td><%= link_to 'Показати', department %></td>
        <td><%= link_to 'Редагувати', edit_department_path(department) %></td>
        <td><%= link_to 'Видалити', department, method: :delete, data: { confirm: 'Ти впевнений?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

