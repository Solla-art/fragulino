<p id="notice"><%= notice %></p>

<h1>Список працівнікив</h1>

<table class="table">
  <thead>
    <tr>
      <th>Повне ім'я</th>
      <th>Магазин</th>
      <th>Відділ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.full_name %></td>
        <td><%= employee.shop ? employee.shop.name : "-" %></td>
        <td><%= employee.department.role %></td>
        <td><%= link_to 'Показати', employee %></td>
        <td><%= link_to 'Редагувати', edit_employee_path(employee) %></td>
        <td><%= link_to 'Видалити', employee, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

