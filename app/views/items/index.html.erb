<h1>Список предметів</h1>

<table class="table">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Опис</th>
      <th>Ціль</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.descripton %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Показати', item %></td>
        <td><%= link_to 'Редагувати', edit_item_path(item) %></td>
        <td><%= link_to 'Видалити', item, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий предмет', new_item_path %>
